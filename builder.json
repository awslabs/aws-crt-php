{
    "name": "aws-crt-php",
    "hosts": {
        "ubuntu": {
            "pkg_setup": [
                "add-apt-repository -y ppa:ondrej/php"
            ],
            "packages": [
                "autotools-dev",
                "autoconf",
                "libtool",
                "clang",
                "php5.6-dev"
            ]
        },
        "al2": {
            "packages": [
                "autoconf",
                "automake",
                "libtool",
                "clang",
                "php-devel"
            ]
        }
    },
    "build_steps": [
        ["phpize"],
        ["./configure"],
        ["make"]
    ],
    "test_env": {
        "NO_INTERACTION": "1"
    },
    "test_steps": [
        ["./run_tests"]
    ]
}
